<?xml version='1.0'?>
<odoo>
    <data noupdate="1">
        <record id="patient_card_email_template" model="mail.template">
            <field name="name">Test Card: Send by Email</field>
            <field name="model_id" ref="dap.model_dap_testsecurity"/>
            <field name="email_from">${object.responsible.email_formatted |safe}</field>
            <field name="email_to">${object.email_id}</field>
            <field name="subject">Patient Card (Ref ${object.name})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px;padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.name}
                        <br/>
                        <br/>
                        Here is your patient card with reference ${object.name}
                        <br/>
                        <br/>
                        Company : ${object.company_id.partner_id.name}
                        Contact Number : ${object.phone}
                        <br/>
                        <br/>
                        If you have queries feel free to ask
                    </p>
                </div>
            </field>
            <field name="report_template" ref="report_dap_appointment"/>
            <field name="report_name">Patient Card_${(object.name)}</field>
        </record>
    </data>
</odoo>