<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_dap">
        <field name="name">Appointment Management</field>
        <field name="description">Category for Appointment</field>
        <field name="sequence">45</field>
    </record>
    <record model="res.groups" id="module_dap_doctor">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_dap"/>
    </record>
    <record model="res.groups" id="module_dap_attendant">
        <field name="name">Attendant</field>
        <!--        <field name="category_id" ref="module_dap"/>-->
    </record>
    <record model="ir.rule" id="see_his_own_test">
        <field name="name">See His Test Only</field>
        <field name="model_id" ref="model_dap_testsecurity"/>
        <field name="domain_force">[('responsible','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('module_dap_doctor'))]"/>
        <!--        ****Below mentioned fields are user customizable fields****-->
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_read" eval="1"/>
    </record>
    <record model="res.groups" id="module_dap_manager">
        <field name="name">DAP Manager</field>
        <field name="category_id" ref="module_dap"/>
        <field name="implied_ids" eval="[(4,ref('module_dap_doctor'))]"/>
    </record>
    <record model="ir.rule" id="see_all_test">
        <field name="name">See All Test</field>
        <field name="model_id" ref="model_dap_testsecurity"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('module_dap_manager'))]"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_read" eval="1"/>
    </record>
    <!--    # defining Record Rule of Multiple companies-->
    <record id="test_multi_company_rule_new" model="ir.rule">
        <field name="name">Test Multi Company Rule</field>
        <field name="model_id" ref="model_dap_testsecurity"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'child_of', [user.company_id.id])]
        </field>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="groups" eval="[(4,ref('module_dap_doctor'))]"/>

    </record>
</odoo>